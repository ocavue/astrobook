---
import '@astrobook/types'
import SidebarButton from './sidebar-button.astro'
---

<SidebarButton id="astrobook-theme-icon" title="Toggle theme">
  <span class=":uno: i-lucide-sun dark:i-lucide-moon box-border block size-4"
  ></span>
</SidebarButton>

<script>
  import { handleToggleClick } from 'astro-theme-toggle'

  document
    .getElementById('astrobook-theme-icon')
    ?.addEventListener('click', handleToggleClick)
</script>
