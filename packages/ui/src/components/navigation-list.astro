---
import type { NavItem } from './navigation'

interface Props {
  items: NavItem[]
}

const { items } = Astro.props as Props
---

<ul>
  {
    items.map((item) => (
      <li>
        <details>
          <summary>
            {item.id ? (
              <a href={`/${item.id}`}>{item.label}</a>
            ) : (
              <span>{item.label}</span>
            )}
          </summary>
          {item.children ? <Astro.self items={item.children} /> : null}
        </details>
      </li>
    ))
  }
</ul>
