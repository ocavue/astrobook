---
import '@astrobook/types'
import config from 'virtual:astrobook/global-config.mjs'

import { getPathWithBase } from '@astrobook/core/client'
import SidebarButton from './sidebar-button.astro'
import { urlPathJoin } from '../../../core/src/utils/path'

interface Props {
  story?: string
}
---

{
  Astro.props.story ? (
    <SidebarButton
      href={urlPathJoin(config.storyBase, Astro.props.story)}
      title="Go full screen"
    >
      <span class=":uno: i-lucide:square-arrow-out-up-right box-border block size-4" />
    </SidebarButton>
  ) : null
}
