---
interface Props {
  id?: string
  href?: string
  title: string
}

const Element = Astro.props.href ? 'a' : 'button'
---

<Element
  id={Astro.props.id}
  href={Astro.props.href}
  class:list={[
    ':uno: text-size-base block inline-block cursor-pointer rounded border-0 bg-transparent p-2 font-semibold text-gray-500 no-underline transition hover:scale-110 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200',
    'astrobook-focus-ring',
  ]}
  target="”_blank”"
  title={Astro.props.title}
>
  <span class=":uno: sr-only">{Astro.props.title}</span>
  <slot />
</Element>
