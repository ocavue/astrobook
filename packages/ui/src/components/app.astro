---
import Layout from './layout.astro'
---

<Layout storyId={null} hasSidebar={true}>
  <div
    class=":uno: flex h-full w-full flex-col items-center justify-center gap-4"
  >
    <h1>Astrobook</h1>
    <footer
      class=":uno: flex h-8 flex-row items-center justify-center gap-2 text-sm"
    >
        <span>
          <span class=":uno: text-gray-400">built by</span>
          <a
            href="https://github.com/ocavue"
            class=":uno: text-gray-400 no-underline hover:text-gray-500"
          >
            @ocavue
          </a>
        </span>
        <span></span>
        <a
          href="https://twitter.com/ocavue"
          class=":uno: inline-block leading-4 text-gray-400 no-underline hover:text-gray-500"
          aria-label="Twitter"
        >
          <span class=":uno: i-mdi-twitter inline-block size-5 leading-4">
          </span>
        </a>

        <a
          href="https://github.com/ocavue/astrobook"
          class=":uno: inline-block leading-4 text-gray-400 no-underline hover:text-gray-500"
          aria-label="GitHub"
        >
          <span class=":uno: i-mdi-github inline-block size-5 leading-4">
          </span>
        </a>
    </footer>
  </div>
</Layout>
