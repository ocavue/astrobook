---
import '@astrobook/types'

import config from 'virtual:astrobook/global-config.mjs'
import { urlPathJoin } from '@astrobook/core/client'
---

<a
  class:list={[
    ':uno: line-height-[1.15] rounded p-2 font-semibold text-gray-500 no-underline transition hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200',
    'astrobook-focus-ring',
  ]}
  href={urlPathJoin('/', config.astrobookBase)}
>
  {config.title}
</a>
