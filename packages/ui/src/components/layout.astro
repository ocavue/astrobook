---
import './layout.css'
import Sidebar from './sidebar.astro'

interface Props {
  storyId: string | null
  hasSidebar: boolean
}

const hasSidebar = Astro.props.hasSidebar ?? true
---

<html lang="en" class=":uno: box-border h-full max-h-screen overflow-hidden">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astrobook</title>
  </head>
  <body
    class=":uno: m-0 box-border flex max-h-full min-h-full flex-row items-stretch justify-start p-0"
  >
    {
      hasSidebar && (
        <div class=":uno: flex w-64 min-w-64 max-w-64 flex-col border-0 border-r border-solid border-gray-200 bg-gray-50">
          <Sidebar storyId={Astro.props.storyId} />
        </div>
      )
    }
    <main class=":uno: box-border flex-1 overflow-auto">
      <slot />
    </main>
  </body>
</html>
