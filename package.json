{
  "name": "astrobook-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "Astrobook monorepo",
  "license": "MIT",
  "scripts": {
    "dev": "turbo watch --filter example-playground dev",
    "postinstall": "pnpm --filter=./packages/ui build",
    "build": "turbo run build",
    "build:package": "turbo build --filter='./packages/*' --concurrency=1",
    "build:watch": "turbo watch build",
    "lint": "eslint .",
    "fix": "manypkg fix && eslint --fix . && prettier --write .",
    "prepublishOnly": "pnpm run build",
    "test": "vitest",
    "test:install": "playwright install --with-deps",
    "test:e2e": "playwright test",
    "typecheck": "tsc --build .",
    "change": "changeset",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:publish": "pnpm run build:package && pnpm publish --access public -r --no-git-checks --tag latest",
    "ci:publish-dev": "pnpm run build:package && pkg-pr-new publish './packages/*' --template ./examples/playground --pnpm"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@changesets/types": "^6.1.0",
    "@manypkg/cli": "^0.23.0",
    "@ocavue/eslint-config": "^3.0.1",
    "@playwright/test": "^1.51.1",
    "@types/node": "^20.17.5",
    "eslint": "^9.27.0",
    "pkg-pr-new": "^0.0.41",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3",
    "vite": "^6.2.2",
    "vitest": "^3.0.9"
  },
  "renovate": {
    "extends": [
      "github>ocavue/config-renovate"
    ]
  },
  "pnpm": {
    "overrides": {
      "astrobook@*": "workspace:*"
    }
  }
}
